
<odoo>

<record id="paperformat_euro" model="report.paperformat">
    <field name="name">Saudi BAR A4</field>
    <field name="default" eval="True" />
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <field name="orientation">Portrait</field>
    <field name="margin_top">25</field>
    <field name="margin_bottom">10</field>
    <field name="margin_left">7</field>
    <field name="margin_right">7</field>
    <field name="header_line" eval="False" />
    <field name="header_spacing">20</field>
    <field name="dpi">90</field>
</record>

<record id="action_appraisal_report" model="ir.actions.report">
    <field name="name">Appraisal Report</field>
    <field name="model">hr.employee.appraisal</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">appraisal_report.appraisal_report_template</field>
    <field name="report_file">appraisal_report.appraisal_report_template</field>
    <field name="print_report_name">'Appraisal Report for %s' % object.employee_id.name</field>
    <field name="binding_model_id" ref="ncss_appraisal.model_hr_employee_appraisal"/>
    <field name="binding_type">report</field>
    <field name="paperformat_id" ref="appraisal_report.paperformat_euro" />

</record>

</odoo>