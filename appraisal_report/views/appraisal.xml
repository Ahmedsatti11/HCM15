<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_hr_appraisal_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.appraisal</field>
            <field name="model">hr.employee.appraisal</field>
            <field name="inherit_id" ref="ncss_appraisal.hr_employee_appraisal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='appraisal_level']" position="after">
                   <field name="appraisal_percentage"/>
                </xpath>
            </field>
        </record>
</odoo>
